<Page x:Class="garmentapp.listCatalog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:garmentapp"
      mc:Ignorable="d" 
      d:DesignHeight="60" d:DesignWidth="800"
      Title="listcatalog" Background="#dadfdf">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Canvas VerticalAlignment="Center" Grid.Row="0">
            <Button Height="35" Width="200" Content="Мужская одежда" Canvas.Top="-10" Canvas.Right="550" Click="btnManCatalog_Click"/>
            <Button Height="35" Width="200" Content="Женская одежда" Canvas.Top="-10" Canvas.Right="300" Click="Button_Click" />
            <Button Height="35" Width="200" Content="Ткани" Canvas.Top="-10" Canvas.Right="50" IsEnabled="False"/>
        </Canvas>
        <Frame NavigationUIVisibility="Hidden" Name="CatalogFrame" Grid.Row="1" Navigated="CatalogFrame_Navigated"/>
    </Grid>
</Page>
