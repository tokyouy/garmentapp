<Window x:Class="garmentapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:garmentapp"
        mc:Ignorable="d"
        Title="Garment" Height="450" Width="400" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Canvas Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Background="DarkSlateGray" Margin="0,275,0,0" Grid.RowSpan="2"/>
        <Canvas Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Background="DarkSlateGray" Margin="0,0,0,275" Grid.RowSpan="2"/>
        <StackPanel x:Name="LoginSector" Grid.Row="1" Grid.Column="0" Height="300" Width="400">
            <TextBox x:Name="tbLogin" HorizontalAlignment="Center" VerticalAlignment="Top" Height="40" Width="275"
                       Margin="48,60,71,15" Background="#FFFAFAFD" FontSize="18"/>
            <PasswordBox x:Name="pbPass" HorizontalAlignment="Center" VerticalAlignment="Top" Height="40" Width="275"
                       Margin="48,0,71,0" Background="#FFFAFAFD" FontSize="18"/>
            <CheckBox x:Name="Check" Content="Показать пароль" HorizontalAlignment="Right" Margin="0,10,80,0"/>
            <Button x:Name="LoginBtn" Content="Войти" Height="35" Width="130" HorizontalAlignment="Left" Margin="50,10,0,0" Click="LoginBtn_Click" FontSize="18"/>
            <Button x:Name="RegisterBtn" Content="Регистрация" Height="35" Width="130" HorizontalAlignment="Right" Margin="0,-35,75,15" Click="RegisterBtn_Click_1" FontSize="18"/>
        </StackPanel>
    </Grid>
</Window>