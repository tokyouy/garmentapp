<Page x:Class="garmentapp.catalog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:garmentapp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="catalog" Background="#dadfdf">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Grid.RowSpan="3" HorizontalAlignment="Left">
                <Button Margin="10,0,0,4" Height="60" Width="200"/>
                <Button Margin="10,0,0,4" Height="60" Width="200"/>
                <Button Margin="10,0,0,4" Height="60" Width="200"/>
                <Button Margin="10,0,0,4" Height="60" Width="200"/>
                <Button Margin="10,0,0,4" Height="60" Width="200"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
